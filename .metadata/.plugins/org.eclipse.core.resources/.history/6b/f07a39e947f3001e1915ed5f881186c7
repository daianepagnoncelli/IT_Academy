package n1exercise3;

import java.util.*;

public class Country {
    private HashMap<String, String> countriesMap;
    private Scanner scanner;

    public Country() {
        countriesMap = new HashMap<>();
        scanner = new Scanner(System.in);
    }

    public void startGame() {
        readCountries("C:\\itacademy\\s1_03\\src\\n1exercise3\\countries.txt");

        System.out.print("Digite seu nome: ");
        String userName = scanner.nextLine();

        int score = playGame();

        saveScore(userName, score);
    }

    private void readCountries(String filename) {
        try (Scanner fileScanner = new Scanner(new java.io.File(filename))) {
            while (fileScanner.hasNextLine()) {
                String line = fileScanner.nextLine();
                String[] parts = line.split(",");
                countriesMap.put(parts[0], parts[1]);
            }
        } catch (java.io.FileNotFoundException e) {
            System.out.println("Erro: Arquivo não encontrado.");
            e.printStackTrace();
        }
    }

    private int playGame() {
        int score = 0;

        for (int i = 0; i < 10; i++) {
            String randomCountry = getRandomCountry();
            String capital = countriesMap.get(randomCountry);

            System.out.println("Qual é a capital de " + randomCountry + "?");
            String userGuess = scanner.nextLine();

            if (userGuess.equalsIgnoreCase(capital)) {
                System.out.println("Correto!");
                score++;
            } else {
                System.out.println("Incorreto. A capital correta é " + capital + ".");
            }
        }
        return score;
    }

    private String getRandomCountry() {
        List<String> keys = new ArrayList<>(countriesMap.keySet());
        return keys.get(new Random().nextInt(keys.size()));
    }

    private void saveScore(String userName, int score) {
        try (java.io.PrintWriter writer = new java.io.PrintWriter(new java.io.FileWriter("C:\\itacademy\\s1_03\\src\\n1exercise3\\classificacao.txt", true))) {
            writer.println(userName + "," + score);
        } catch (java.io.IOException e) {
            System.out.println("Erro ao salvar a pontuação.");
            e.printStackTrace();
        }
    }
}