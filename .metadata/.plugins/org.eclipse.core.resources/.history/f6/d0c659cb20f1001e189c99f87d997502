package n1exercise1;

//Classe base InstrumentoMusical
abstract class InstrumentoMusical {
 protected String nome;
 protected double preco;

 public InstrumentoMusical(String nome, double preco) {
     this.nome = nome;
     this.preco = preco;
 }

 // Método abstrato touch()
 abstract void touch();
}

//Subclasse InstrumentoSopro
class InstrumentoSopro extends InstrumentoMusical {
 public InstrumentoSopro(String nome, double preco) {
     super(nome, preco);
 }

 // Implementação do método touch() para instrumentos de sopro
 void touch() {
     System.out.println("Um instrumento de sopro está sendo tocado");
 }
}

//Subclasse InstrumentoCordas
class InstrumentoCordas extends InstrumentoMusical {
 public InstrumentoCordas(String nome, double preco) {
     super(nome, preco);
 }

 // Implementação do método touch() para instrumentos de cordas
 void touch() {
     System.out.println("Um instrumento de cordas está sendo tocado");
 }
}

//Subclasse InstrumentoPercussao
class InstrumentoPercussao extends InstrumentoMusical {
 public InstrumentoPercussao(String nome, double preco) {
     super(nome, preco);
 }

 // Implementação do método touch() para instrumentos de percussão
 void touch() {
     System.out.println("Um instrumento de percussão está sendo tocado");
 }
}
