package n1exercise1;

import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        
    	Scanner scanner = new Scanner(System.in);

        InstrumentoMusical instrumento = null;

        System.out.println("Search type of instrument:");
        System.out.println("1 - Instrumento de Sopro");
        System.out.println("2 - Instrumento de Cordas");
        System.out.println("3 - Instrumento de Percussão");
        int escolha = scanner.nextInt();
        scanner.nextLine(); 

        String nomeInstrumento;
        double precoInstrumento;

        switch (escolha) {
            case 1:
                System.out.println("Informe o nome do instrumento de sopro:");
                nomeInstrumento = scanner.nextLine();
                System.out.println("Informe o preço do instrumento de sopro:");
                precoInstrumento = Double.parseDouble(scanner.nextLine());
                instrumento = new InstrumentoSopro(nomeInstrumento, precoInstrumento);
                break;
            case 2:
                System.out.println("Informe o nome do instrumento de cordas:");
                nomeInstrumento = scanner.nextLine();
                System.out.println("Informe o preço do instrumento de cordas:");
                precoInstrumento = Double.parseDouble(scanner.nextLine());
                instrumento = new InstrumentoCordas(nomeInstrumento, precoInstrumento);
                break;
            case 3:
                System.out.println("Informe o nome do instrumento de percussão:");
                nomeInstrumento = scanner.nextLine();
                System.out.println("Informe o preço do instrumento de percussão:");
                precoInstrumento = Double.parseDouble(scanner.nextLine());
                instrumento = new PercussionInstrument(nomeInstrumento, precoInstrumento);
                break;
            default:
                System.out.println("Escolha inválida!");
        }

        if (instrumento != null) {
            System.out.println("\nDados do instrumento:");
            System.out.println("Nome: " + instrumento.nome);
            System.out.println("Preço: R$" + instrumento.preco);
            System.out.println("\nTocando o instrumento:");
            instrumento.touch();
        }

        scanner.close();
    }
}
