package n1exercise1;

import java.util.ArrayList;
import java.util.HashSet;
import java.util.Iterator;

public class Main {

	public static void main(String[] args) {
	
		ArrayList<Month> months = new ArrayList<>();
        months.add(new Month("Gener"));
        months.add(new Month("Febrer"));
        months.add(new Month("Març"));
        months.add(new Month("Abril"));
        months.add(new Month("Maig"));
        months.add(new Month("Juny"));
        months.add(new Month("Juliol"));
        // Inserció de "Agost" al seu lloc corresponent
        months.add(6, new Month("Agost"));
        months.add(new Month("Setembre"));
        months.add(new Month("Octubre"));
        months.add(new Month("Novembre"));
        months.add(new Month("Desembre"));

        System.out.println("Llista de mesos:");
        for (Month month : months) {
            System.out.println(month);
        }

        HashSet<Month> monthsSet = new HashSet<>(months);

        System.out.println("HashSet de mesos:");
        for (Month month : monthsSet) {
            System.out.println(month);
        }

        System.out.println("Recorregut amb for:");
        for (int i = 0; i < monthsSet.size(); i++) {
            System.out.println(monthsSet.get(i));
        }

        System.out.println("Recorregut amb iterador:");
        Iterator<Month> iterator = monthsSet.iterator();
        while (iterator.hasNext()) {
            System.out.println(iterator.next());
        }
    }
		
}

