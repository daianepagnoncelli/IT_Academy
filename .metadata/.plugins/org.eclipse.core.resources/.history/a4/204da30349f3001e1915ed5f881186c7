package n1exercise3;

import java.io.*;
import java.util.*;

public class Country {
    private HashMap<String, String> countriesMap;
    private Scanner scanner;

    public Country() {
        countriesMap = new HashMap<>();
        scanner = new Scanner(System.in);
    }

    public void startGame() {
        readCountries("C:\\itacademy\\s1_03\\src\\n1exercise3\\countries.txt");

        System.out.print("Digite seu nome: ");
        String userName = scanner.nextLine();

        int score = playGame();

        saveScore(userName, score);
    }

    private void readCountries(String filename) {
        try (Scanner fileScanner = new Scanner(new File(filename))) {
            while (fileScanner.hasNextLine()) {
                String line = fileScanner.nextLine();
                String[] parts = line.split(" ", 2); // Divide a linha em duas partes, usando o primeiro espaço encontrado
                if (parts.length >= 2) {
                    String capital = parts[0];
                    String country = parts[1];
                    countriesMap.put(capital, country); // Corrigido aqui
                } else {
                    System.out.println("Erro: Linha mal formatada no arquivo: " + line);
                }
            }
        } catch (FileNotFoundException e) {
            System.out.println("Erro: Arquivo não encontrado.");
            e.printStackTrace();
        }
    }

    private int playGame() {
        int score = 0;

        for (int i = 0; i < 10; i++) {
            String randomCapital = getRandomCapital();
            String country = countriesMap.get(randomCapital); // Corrigido aqui

            System.out.println("Qual é a capital de " + country + "?"); // Corrigido aqui
            String userGuess = scanner.nextLine();

            if (userGuess.equalsIgnoreCase(randomCapital)) {
                System.out.println("Correto!");
                score++;
            } else {
                System.out.println("Incorreto. A capital correta é " + randomCapital + ".");
            }
        }
        return score;
    }

    private String getRandomCapital() {
        List<String> keys = new ArrayList<>(countriesMap.keySet());
        return keys.get(new Random().nextInt(keys.size()));
    }

    private void saveScore(String userName, int score) {
        try (PrintWriter writer = new PrintWriter(new FileWriter("C:\\itacademy\\s1_03\\src\\n1exercise3\\classificacao.txt", true))) {
            writer.println(userName + "," + score);
        } catch (IOException e) {
            System.out.println("Erro ao salvar a pontuação.");
            e.printStackTrace();
        }
    }

    public static void main(String[] args) {
        Country game = new Country();
        game.startGame();
    }
}
